{
    "name": "website",
    "description": "A fork of the Editorial Ghost theme.",
    "version": "2.0.0",
    "engines": {
        "ghost": ">=3.0.0",
        "ghost-api": "v3"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "pretest": "gulp build",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi",
        "clean": "rm -rf dist/",
        "token": "node scripts/api-token.js",
        "dev:deploy": "npm run clean && npm run zip && npm run deploy",
        "deploy": "node scripts/deploy-theme.js"
    },
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/mikemimik/website.git"
    },
    "bugs": "https://github.com/mikemimik/website/issues",
    "contributors": [
        {
            "name": "ajlkn",
            "email": "aj@lkn.io",
            "url": "https://twitter.com/ajlkn"
        },
        {
            "name": "Michael Perrotte",
            "email": "mike@mikecorp.ca",
            "url": "https://mikecorp.ca"
        }
    ],
    "devDependencies": {
        "@mikemimik/ghost-admin-api": "^1.1.0",
        "beeper": "^2.1.0",
        "dotenv": "^8.2.0",
        "form-data": "^3.0.0",
        "gscan": "^3.6.1",
        "gulp": "4.0.2",
        "gulp-livereload": "4.0.2",
        "gulp-sass": "^4.1.0",
        "gulp-sourcemaps": "^2.6.5",
        "gulp-watch": "^5.0.1",
        "gulp-zip": "^5.0.2",
        "node-fetch": "^2.6.1",
        "node-sass": "^4.14.1"
    },
    "config": {
        "posts_per_page": 6
    }
}
